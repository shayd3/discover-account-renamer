{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "libs/polyfill.min.js",
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "actibeTab",
    "http://*/*",
    "https://*/*",
    "background",
    "pageCapture",
    "storage",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://portal.discover.com/customersvcs/portal/summary",
        "https://portal.discover.com/dfs/accounthome/portal*",
        "https://card.discover.com/cardmembersvcs/achome/homepage*",
        "https://bank.discover.com/bankac*",
        "file:///home/ross/Desktop/discover-portal.html*"
      ],
      "js": [
        "libs/jquery-3.3.1.slim.min.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "discover account renamer",
    "default_popup": "popup.html"
  }
}
